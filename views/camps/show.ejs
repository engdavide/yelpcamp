<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Header</p>
            <div class="list-group">
                <ul>
                    <li class=list-group-item>list1</li>
                    <li class=list-group-item>list2</li>
                    <li class=list-group-item>list3</li>
                </ul>
            </div>
        </div>
        
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="thumbnail img-responsive" src="<%=camp.image%>"></img>
                <div class="caption-full">
                    <h4 class="pull-right">Price: $9.00</h4>
                    <h4><%= camp.name %></h4>
                    <p> Submitted by: <%= camp.author.username %> </p>
                    <p> <%=camp.description%> </p>
                    
                </div>
            </div>

        
            <div class="well">
                <p class="text-right">
                    <a href="/camps/<%=camp._id%>/comments/new" class="btn btn-success">Add a Comment</a>
                </p>
                <hr>
                    <% camp.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%= comment.author.username %></strong>
                                <span class="pull-right">10 days ago</span>
                                <p> <%= comment.text %>   </p>
                                
                            </div>                           
                        </div>


         
                    <% }) %>
            </div>
            
        </div>
    </div>
</div>







<% include ../partials/footer %>