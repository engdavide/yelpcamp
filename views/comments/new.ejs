<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add new comment for <%= camp.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/camps/<%= camp._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Let us know what you think" name="comment[text]"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Author" name="comment[author]"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href=/camps>View all Campgrounds</a>
        </div>
        

    </div>
</div>

<% include ../partials/footer %>