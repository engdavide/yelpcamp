<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>This is the campgrounds page</h1>
            <p>View all of our beautiful campgrounds</p>
            <p>
                <a class="btn btn-primary btn-md" href="/camps/new">Add new campground</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% camps.forEach(function(campground){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail"> 
                        <img src="<%=campground.image%>"></img>
                        <div class="caption">
                              <h4><%= campground.name %></h4>
                        </div>
                    </div>
                </div>
        <% }); %>
    </div> 
</div>

    
    
    
    <a href=/>Home</a>



<% include partials/footer %>